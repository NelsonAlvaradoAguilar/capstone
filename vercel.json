{
  "version": 2,
  "builds": [
    {
      "src": "server-side/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client-side/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client-side/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server-side/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client-side/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/client-side/index.html"
    }
  ]
}
